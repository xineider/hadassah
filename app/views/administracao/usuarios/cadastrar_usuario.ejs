<%if(usuario.nivel == 1){ %>
<div class="container-fluid">
	<div class="w100 text-center">
		<div class="bold f25 text-center margin-b-10">Cadastrar Usuário</div>

		<form method="POST" action="" enctype="multipart/form-data">

			<div class="row">
				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="email">Email</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control " type="text" name="email">
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="nome">Nome</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control" type="text" name="nome">
						</div>
					</div>
				</div>
			</div>

			<div class="row">

				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="telefone">Celular</label>
						<div class="col-sm-10">
							<input required="true" class="validate tel form-control" type="text" name="telefone">
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="nivel">Nível</label>
						<div class="col-sm-10">
							<select required="true" name="nivel" class="form-control select_change_container" data-container="container_conectores" data-number-appear="3" data-link="<%= data.link_sistema%>/administracao/lista-conectores">
								<option value="4" selected>Observador</option>
								<option value="3" selected>Comum</option>
								<option value="2">Super Usuário</option>
								<option value="1">Administrador</option>			
							</select>
						</div>
					</div>
				</div>
			</div>



			<button data-href="/sistema/administracao/usuarios/cadastrar" data-action="<%= data.link_sistema%>/administracao/usuarios/" class="btn primary ajax-submit margin-b-10" data-mensagem-sucesso="Usuário Cadastrado com Sucesso!" >
				Salvar <i class="far fa-save-o" aria-hidden="true"></i>
			</button>

		</form>
	</div>

</div>

<%}else{%>
<div class="text-center f25">Você não possui permissão para acessar esse conteúdo!</div>
<%}%>

