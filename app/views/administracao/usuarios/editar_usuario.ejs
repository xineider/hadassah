<%if(usuario.nivel == 1){ %>
<div class="container-fluid">
	<div class="w100 text-center">
		<div class="bold f25 text-center margin-b-10">Editar Usuário</div>

		<form method="POST" action="" enctype="multipart/form-data">
			<input type="hidden" name="id" value="<%= data.usuario_admin[0].id %>">

			<div class="row">
				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="email">Email</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control " type="text" name="email" value="<%= data.usuario_admin[0].email %>">
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="nome">Nome</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control" type="text" name="nome" value="<%= data.usuario_admin[0].nome %>">
						</div>
					</div>
				</div>
			</div>

			<div class="row">

				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="telefone">Celular</label>
						<div class="col-sm-10">
							<input required="true" class="validate tel form-control" type="text" name="telefone" value="<%= data.usuario_admin[0].telefone %>">
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="col-sm-2" for="nivel">Nível</label>
						<div class="col-sm-10">
							<select required="true" name="nivel" class="form-control">
								<option value="4" <%= data.usuario_admin[0].nivel == 4 ? 'selected' : '' %>>Observador</option>
								<option value="3" <%= data.usuario_admin[0].nivel == 3 ? 'selected' : '' %>>Comum</option>
								<option value="2" <%= data.usuario_admin[0].nivel == 2 ? 'selected' : '' %>>Super Usuário</option>				
								<option value="1" <%= data.usuario_admin[0].nivel == 1 ? 'selected' : '' %>>Administrador</option>			
							</select>
						</div>
					</div>
				</div>
			</div>


			<button data-href="/sistema/administracao/usuarios/atualizar" data-action="<%= data.link_sistema%>/administracao/usuarios/" class="btn primary ajax-submit margin-b-10" data-mensagem-sucesso="Usuário Atualizado com Sucesso!" >
				Atualizar Usuário <i class="far fa-save-o" aria-hidden="true"></i>
			</button>

		</form>
	</div>

	<div class="w100 text-center margin-t-10">

		<button class="modal-mount btn secondary margin-b-10" data-modal="#modalinfo" data-link="/sistema/administracao/alterar-senha-usuario/<%= data.usuario_admin[0].id %>">
			Alterar Senha Usuário
			<i class="fas fa-key"></i>
		</button>

	</div>


</div>

<%}else{%>
<div class="text-center f25">Você não possui permissão para acessar esse conteúdo!</div>
<%}%>
