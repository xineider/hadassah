<form method="POST" action="" data-link="/sistema/empresa/pesquisar/">
	<div class="caixa_pesquisa">
		<div class="accordion w100 margin-t-10" id="pesquisa_empresa">
			<div class="card margin-b-10">
				<div class="card-header text-center" id="headingOne">
					<h5 class="mb-0">
						<button class="btn" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
							Pesquisa Avançada
						</button>
					</h5>
				</div>

				<div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#pesquisa_empresa">
					<div class="card-body">

						<div class="row">
							<% if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_segmento == 0)){ %>

							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="id_segmento">Segmento</label>
									<div class="col-sm-10">
										<select name="id_segmento" class="form-control pesquisa" data-container="#tabela_empresa">
											<option value="nao_existe">Selecione...</option>
											<%
											if (typeof data.segmento != 'undefined' && data.segmento.length > 0) {
												for (var i = 0; i < data.segmento.length; i++) { %>
												<option value="<%= data.segmento[i].id %>"><%= data.segmento[i].descricao %></option>				
												<% }
											} %>
										</select>
									</div>
								</div>
							</div>

							<%}if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_regiao == 0)){%>

							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="id_regiao">Região</label>
									<div class="col-sm-10">
										<select name="id_regiao" class="form-control pesquisa" data-container="#tabela_empresa">
											<option value="nao_existe">Selecione...</option>
											<%
											if (typeof data.regiao != 'undefined' && data.regiao.length > 0) {
												for (var i = 0; i < data.regiao.length; i++) { %>
												<option value=" <%= data.regiao[i].id %>"><%= data.regiao[i].sigla %></option>				
												<% }
											} %>
										</select>
									</div>
								</div>
							</div>
							<%}%>
						</div>



						<div class="row">
							<%if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_faturamento == 0)){%>
							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="faturamento">Fat. Maior </label>
									<div class="col-sm-10">
										<input class="validate form-control pesquisa" type="number" name="faturamento_maior" data-container="#tabela_empresa">
									</div>
								</div>
							</div>
							<%}if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_faturamento == 0)){%>
							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="faturamento">Fat. Menor </label>
									<div class="col-sm-10">
										<input class="validate form-control pesquisa" type="number" name="faturamento_menor" data-container="#tabela_empresa">
									</div>
								</div>

							</div>
							<%}%>
						</div>


						<div class="row">
							<%if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_valor_venda == 0)){%>

							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="valor_venda">Valor Vnd. Maior</label>
									<div class="col-sm-10">
										<input class="validate form-control pesquisa" type="number" name="valor_venda_maior" data-container="#tabela_empresa">
									</div>
								</div>
							</div>
							<%}if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_valor_venda == 0)){%>

							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="valor_venda">Valor Vnd. Menor</label>
									<div class="col-sm-10">
										<input class="validate form-control pesquisa" type="number" name="valor_venda_menor" data-container="#tabela_empresa">
									</div>
								</div>
							</div>

							<%}%>

						</div>


						<div class="row">
							<%if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_ebitida == 0)){%>
							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="ebitida">Ebitida</label>
									<div class="col-sm-10">
										<input class="validate form-control pesquisa" type="text" name="ebitida" data-container="#tabela_empresa">
									</div>
								</div>
							</div>

							<%}if((data.permissoes.length == 0) || (data.permissoes.length > 0 && data.permissoes[0].show_consult == 0)){%>

							<div class="form-group col-md-6">
								<div class="row">
									<label class="grey-text col-sm-2" for="consult">Consult</label>
									<div class="col-sm-10">
										<input class="validate form-control pesquisa" type="text" name="consult" data-container="#tabela_empresa">
									</div>
								</div>
							</div>

							<%}%>
						</div>

					</div>
				</div>

			</div>
		</div>
	</div>




</form>